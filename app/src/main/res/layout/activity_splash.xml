<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fastbuyapp.fastbuy.fastbuy.SplashActivity"
    android:background="@color/exito"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="264dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="100dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view"
                android:layout_width="385dp"
                android:layout_height="269dp"
                app:lottie_imageAssetsFolder="assets"
                app:lottie_fileName="carr2.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                tools:layout_editor_absoluteY="0dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.58" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="FAST BUY"
                android:layout_width="296dp"
                android:layout_height="49dp"
                android:id="@+id/lblFastBuy"
                android:textColor="@color/blanco"
                android:textSize="40dp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="360dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="Valoramos tu tiempo"
                android:layout_width="283dp"
                android:textSize="20dp"
                android:layout_height="42dp"
                android:textColor="@color/blanco"
                android:id="@+id/lbleslogan"
                android:textStyle="bold"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblFastBuy" />
        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</LinearLayout>
