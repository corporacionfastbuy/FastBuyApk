<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_portada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fastbuyapp.fastbuy.fastbuy.PortadaActivity"
    android:background="@color/fastbuy"
    >



    <LinearLayout
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView"
            android:layout_marginRight="11dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_above="@+id/lblFast2"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

    <TextView
        android:text="FAST BUY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblFast2"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Selecciona tu ciudad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblBuy2"
        android:layout_gravity="center"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@+id/lblFast2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <RelativeLayout
        android:layout_width="232dp"
        android:layout_marginRight="3dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/botoniniciar"
            android:id="@+id/cboCiudadCarrito"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@android:drawable/arrow_down_float" />
    </RelativeLayout>


    <Button
        android:text="INICIAR"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:id="@+id/btnIniciar"
        android:background="@drawable/botoniniciar"
        android:textColor="@color/fastbuy"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        android:layout_alignTop="@+id/cboCiudadCarrito"
        android:layout_centerHorizontal="true" />


</LinearLayout>
